%html
  %head
    %title WiiLabel
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %h2 Menu
    %ul
      - @menu = menu
      - @menu.each do |m|
        %li= link_to m, items_path(params: {category: m, status: params[:status]})
    = yield