<h1>Items#index</h1>
<p>Find me in app/views/items/index.html.haml</p>


.panel.panel-default
  .panel-heading
    %h3.panel-title Items list

    =link_to "All", items_path(params: {category: params[:category]})
    =link_to "checked", items_path(params: {status: 'checked', category: params[:category]})
    =link_to "unchecked", items_path(params: {status: 'unchecked', category: params[:category]})
    =paginate @items
  .panel-body
    %table.table.table-hover
      %thead
        %th
      %tbody
        - @items.each do |item|
          %tr
            %td= item.title
            %td= render_status item
            %td= link_to 'Show', item
            %td= link_to 'Edit', edit_item_path(item, params: {status: params[:status], category: params[:category]})
            %td= link_to 'Delete', item, method: :delete, data: {confirm: "sure?"}

  .panel-footer



